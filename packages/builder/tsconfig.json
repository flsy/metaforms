{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "composite": true,
    "lib": ["es6", "es2017"],
    "outDir": "./lib",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
