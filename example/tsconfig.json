{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "composite": true,
    "lib": ["es6", "dom", "es2017"],
    "outDir": "./lib",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["react"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
